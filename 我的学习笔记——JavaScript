     //   let arr = [1 , 2 , 3 , 4 , 5 ];

        // 1、如何清空数组
       /* arr.length = 0;
        console.log(arr);*/

       /*arr.splice(0 , arr.length);
        console.log(arr);*/

       /*arr = [];
        console.log(arr);*/
